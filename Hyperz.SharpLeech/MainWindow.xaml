<Window x:Class="Hyperz.SharpLeech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:ax="clr-namespace:AxWMPLib;assembly=AxInterop.WMPLib"
        xmlns:my="clr-namespace:Hyperz.SharpLeech"
        xmlns:cfg="clr-namespace:Hyperz.SharpLeech.Properties"
        xmlns:engine="clr-namespace:Hyperz.SharpLeech.Engine;assembly=Hyperz.SharpLeech.Engine"
        xmlns:ctrl="clr-namespace:Hyperz.SharpLeech.Controls"
        mc:Ignorable="d" Background="{Binding Source={StaticResource WindowBackgroundBrush}}"
        Title="SharpLeech 2.0.0 RC1" Height="414" Width="819"
        Loaded="Window_Loaded" MinHeight="414" MinWidth="819"
        VisualClearTypeHint="Enabled" VisualBitmapScalingMode="NearestNeighbor"
        TextOptions.TextFormattingMode="Display" WindowStartupLocation="CenterScreen"
        VisualTextRenderingMode="ClearType" VisualTextHintingMode="Fixed" Visibility="Hidden" Closing="Window_Closing">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskBarInfo">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo x:Name="btnThumbPrev" Description="Previous Radio Station" ImageSource="/Images/Previous.png"
                                 Click="btnThumbPrev_Click" />
                <ThumbButtonInfo x:Name="btnThumbStop" Description="Stop Radio" ImageSource="/Images/Stop.png"
                                 Click="btnThumbStop_Click" />
                <ThumbButtonInfo x:Name="btnThumbNext" Description="Next Radio Station" ImageSource="/Images/Next.png"
                                 Click="btnThumbNext_Click" />
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <!--<Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
    </Window.Background>-->

    <Window.Resources>
        <!--<cfg:Settings x:Key="Cfg" />-->
        <Style x:Key="txtStatusStyle" TargetType="{x:Type TextBlock}">
            <!--<Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="11px" />
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="SnapsToDevicePixels" Value="True" />-->
        </Style>
        <Style x:Key="btnFadeStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Opacity" Value="1.00" />
            <!--<Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsFocused" Value="False" />
                    </MultiTrigger.Conditions>
